func draw(number radio)
begin
	if radio >= 1 then
		writeln "Radio ", radio;

		rotatel(45);
		arc(180, radio/2);
		for l from 0 to 360 by 90 do
			forward(radio);
			draw(radio/2);
			backward(radio);
			rotatel(90);
		end;

		rotater(45);
		writeln "Fin Radio ", radio;
	else
		writeln "Fin de Draw ", radio;
		arc(360, 5); 
	end;
end;
program
    for l from 0 to 360 by 90 do
    	draw(100);
    	rotatel(90);
    end;
end;